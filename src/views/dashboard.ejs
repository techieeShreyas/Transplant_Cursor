    function getUrgencyBadgeClass(urgency) {
      switch (urgency) {
        case 'Low':
          return 'bg-info text-dark';
        case 'Medium':
          return 'bg-warning text-dark';
        case 'High':
          return 'bg-danger';
        case 'Critical':
          return 'bg-dark';
        default:
          return 'bg-secondary';
      }
