      switch (status) {
        case 'Available':
        case 'Waiting':
          return 'bg-secondary';
        case 'Matched':
          return 'bg-warning text-dark';
        case 'Transplanted':
          return 'bg-success';
        default:
          return 'bg-primary';
      }
